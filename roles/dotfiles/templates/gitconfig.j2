[user]
{% if git_user_name is defined %}
    name = {{ git_user_name }}
{% else %}
    name = Your Name
{% endif %}
{% if git_user_email is defined %}
    email = {{ git_user_email }}
{% else %}
    email = your.email@example.com
{% endif %}

[init]
    defaultBranch = main

[core]
    editor = vim
    autocrlf = input

[push]
    default = simple

[pull]
    rebase = false

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate --all